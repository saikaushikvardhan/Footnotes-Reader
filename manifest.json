{
    "manifest_version": 3,
    "name": "foot-notes-reader",
    "description": "An extension that improves the UI of paulgraham.com website",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/logo.png"
    },
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
      },
    "content_scripts":[
        {
            "js": ["scripts/content-script.js"],
            "css": ["scripts/style.css"],
            "matches": ["https://paulgraham.com/*"]
        }
    ]
}